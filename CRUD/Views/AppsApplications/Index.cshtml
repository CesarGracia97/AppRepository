@model IEnumerable<CRUD.Models.AppsApplication>

@{
    ViewData["Title"] = "Aplicaciones";
}

<h1>Aplicaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear App</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameApplication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionApplication)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameApplication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionApplication)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
